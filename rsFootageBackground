// Add Live Footage as Background in Render View

createNode RedshiftDomeLight -n "backplate_lgtShape" ; // creates and renames dome light
	setAttr ".backPlateEnabled" yes ; // enables backplate
	setAttr ".tex1" -type "string" "H:/Camera/S1-6_sidewalkSpider/sidewalkSpider001.exr" ; // image sequence path
	setAttr ".useFrameExtension1" yes ; // uses image sequence
	setAttr ".color" -type double3 0 0 0 ; // sets tint to zero. use color picker to match and adjust tint color to footage shadow
	// sets image sequence as background

select -r proxy_geo ; // selects “proxy_geo” in outliner
shadingNode -asShader RedshiftMatteShadowCatcher -n "shadowCatcher_mat"; // creates and names material node
sets -renderable true -noSurfaceShader true -empty -n "shadowCatcher_matSG"; // creates and names shader node
connectAttr -f shadowCatcher_mat.outColor shadowCatcher_matSG.surfaceShader; // links material to shader node
assignCreatedShader "RedshiftMatteShadowCatcher" "" shadowCatcher_mat "proxy_geo"; // links material to shape node
sets -e -forceElement shadowCatcher_matSG; // replaces elements in current data set

setAttr "shadowCatcher_mat.backgr\oundIsEnv" 1; // enables background as environment
setAttr "proxy_geoShape.rsEnableVisibilityOverrides" 1; // enables redshift visibility in shape node
setAttr "proxy_geoShape.rsSelfShadows" 0; // disables self-shadows

// Using Shaders and HDRI to Simulate Live Set Reflections on CG Assets 

polyCylinder -r 1 -h 2 -sx 20 -sy 1 -sz 1 -ax 0 1 0 -rcp 0 -cuv 3 -ch 1 -n "foliage_shaderGeo"  // creates names foliage_shaderGeo 
shadingNode -asShader RedshiftMaterial -n "foliage_mat"; // creates and names material node 
sets -renderable true -noSurfaceShader true -empty -n "shadowCatcher_matSG"; // creates and names shader node
connectAttr -f shadowCatcher_mat.outColor shadowCatcher_matSG.surfaceShader; // links material to shader node
assignCreatedShader "RedshiftMatteShadowCatcher" "" shadowCatcher_mat "proxy_geo"; // links material to shape node
sets -e -forceElement shadowCatcher_matSG; // replaces elements in current data set

// transform to match foliage reflection on CG element

// restrict all lighting interactions other than reflected diffuse on CG element
setAttr "foliage_mat.diffuse_color" -type double3 0 0.118 0 ; // sets diffuse color to a green color
setAttr "foliage_mat.refl_roughness" 1.000 ; // sets reflection roughness to 1
setAttr "foliage_shaderGeoShape.rsEnableVisibilityOverrides" 1; // enables RedShift visibility overrides
setAttr "foliage_shaderGeoShape.rsPrimaryRayVisible" 0; // disables primary ray visibility (hides geo from render)
setAttr "foliage_shaderGeoShape.rsShadowCaster" 0; // disables shadow casted by geo

// increase bounce light of shaderGeo reflections using GI
setAttr "redshiftOptions.primaryGIEngine" 3\; // sets primary GI to “Irradiance cache”
setAttr "redshiftOptions.secondaryGIEngine" 4; // sets primary GI to “brute force”

// increases bounce light of shaderGeo reflections
setAttr "backplate_lgtShape.tex0" -type "string" "H:/Camera/hdri_parkingLot/HDR_111_Parking_Lot_2_Ref.hdr"; 
// applies HDR to dome light
setAttr "backplate_lgtShape.color" -type double3 0.397 0.538414 1 ; // use select shadow color from plates
